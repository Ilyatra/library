[32m+[m[32mlet myLibrary = [];[m
[32m+[m
[32m+[m[32mfunction Book(title, author, pages, isRead, containerLength) {[m
[32m+[m[32m    this.title = title;[m
[32m+[m[32m    this.author = author;[m
[32m+[m[32m    this.pages = pages;[m
[32m+[m[32m    this.isRead = isRead;[m
[32m+[m[32m    this.id = containerLength;[m
[32m+[m
[32m+[m[32m    this.info = function(){[m
[32m+[m[32m        return `${this.title} by ${author}, ${pages} pages,[m[41m [m
[32m+[m[32m                ${isRead ? "it is read" : "not read yet"}`;[m
[32m+[m[32m    }[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mfunction addBookToLibrary(title, author, pages, isRead, containerLength) {[m
[32m+[m[32m    let book = new Book(title, author, pages, isRead, containerLength);[m
[32m+[m[32m    myLibrary.push(book);[m
[32m+[m[32m    localStorage.setItem('library', JSON.stringify(myLibrary));[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mfunction submitNewBook(event) {[m
[32m+[m[32m    const elem = event.target;[m
[32m+[m[32m    addBookToLibrary(elem.title.value, elem.author.value, elem.pages.value,[m[41m [m
[32m+[m[32m        elem['is-read'].checked, myLibrary.length);[m
[32m+[m[32m}[m
