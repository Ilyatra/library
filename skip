[32m+[m[32mfunction renderNav() {[m
[32m+[m[32m    let elemArr = myLibrary.map(elem => {[m
[32m+[m[32m        let navItem = document.createElement('span');[m
[32m+[m[32m        navItem.innerHTML = elem.title;[m
[32m+[m[32m        navItem.dataset.bookId = elem.id;[m
[32m+[m[32m        navItem.addEventListener('click', selectBook);[m
[32m+[m[32m        return navItem;[m
[32m+[m[32m    });[m
[32m+[m[32m    document.querySelector('.nav').append(...elemArr);[m
[32m+[m[32m}[m
[32m+[m
